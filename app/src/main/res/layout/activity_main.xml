<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="junior.izael.jogoadiviacao.MainActivity">


   <LinearLayout
       android:id="@+id/layout_cartas"
       android:layout_centerInParent="true"
       android:layout_centerHorizontal="true"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       
       <ImageView
           android:id="@+id/um"
           android:src="@drawable/capa"
           android:layout_width="80dp"
           android:layout_height="300dp" />
       <ImageView
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:id="@+id/dois"
           android:src="@drawable/capa"
           android:layout_width="80dp"
           android:layout_height="300dp" />
       <ImageView
           android:id="@+id/tres"
           android:src="@drawable/capa"
           android:layout_width="80dp"
           android:layout_height="300dp" />

   </LinearLayout>

<Button
    android:id="@+id/btnNew"
    android:text="@string/btn_novo"
    android:layout_below="@id/layout_cartas"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnNew"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnNew"
        android:layout_marginTop="35dp"
        android:text="@string/textotop" />

</RelativeLayout>
